{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "port": 9229,
      "type": "node",
      "request": "attach",
      "cwd": "${workspaceFolder}/layin/dist/out-tsc",
      "runtimeExecutable": "${workspaceFolder}/layin/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/layin/node_modules/.bin/electron.cmd"
      },
      "args" : ["."],
      "outputCapture": "std"
    },
    {
      "name": "ng serve",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "yarn: start",
      "webRoot": "${workspaceFolder}/layin",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
